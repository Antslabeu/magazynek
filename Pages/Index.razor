@page "/"
@using Magazynek.Entities
@using Magazynek.Services
@using Magazynek.Data

@inject IShippingEntryService ShippingEntryService
@inject IProductService       ProductService


<PageTitle>Ilości</PageTitle>

<div class="container mt-4">
    <div class="mb-3 searcher gap-4">
        <input class="form-control bg-dark text-light" type="text" placeholder="Szukaj..." @bind="searchTerm" />
        <button class="btn btn-success" @onclick="AddNew">
            <i class="bi bi-plus-circle"></i>
        </button>
        <button class="btn btn-light" @onclick="RefreshValues">
            <i class="bi bi-arrow-clockwise"></i>
        </button>
    </div>
    <table class="table table-dark table-striped table-hover align-middle">
        <thead class="table-dark border-bottom border-light">
            <tr>
                <th>Nazwa</th>
                <th>Opis</th>
                <th>Obudowa</th>
                <th>Ilość</th>
                <th>TME ID</th>
                <th>Dostępność</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ShippingEntryViewModel shippingEntry in filteredShippings)
            {
                bool qtyZero = shippingEntry.quantity == 0;
                bool stockZero = shippingEntry.stock == 0;
                <tr>
                    <td class="@(stockZero || qtyZero? "text-danger":"")">@shippingEntry.product.name</td>
                    <td>@shippingEntry.product.description</td>
                    <td>@shippingEntry.product.package</td>
                    <td class="@(qtyZero? "text-danger":"")">@shippingEntry.quantity</td>
                    <td>@shippingEntry.product.tmeID</td>
                    <td class="@(stockZero? "text-danger":"")">@shippingEntry.stock</td>
                </tr>
            }
        </tbody>
    </table>

    @if (editingEntry != null)
    {
        <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog">
                <div class="modal-content text-light bg-dark">
                    <div class="modal-header">
                        <h5 class="modal-title">Dodaj dostawę</h5>
                        <button type="button" class="btn-close btn-close-white" @onclick="CloseAddModal"></button>
                    </div>
                    <div class="modal-body">
                        <EditForm Model="editingEntry" OnValidSubmit="SaveEntry">
                            <div class="mb-3">
                                <label for="search-product" class="form-label">Wybierz produkt</label>
                                <InputText id="search-product" class="form-control mb-2" placeholder="Szukaj..." 
                                    @bind-Value="productSearch" 
                                    @oninput="e => { productSearch = e.Value?.ToString() ?? string.Empty; FilterProducts(); }" 
                                />
                                <select id="sel-product" class="form-select" @onchange="OnProductSelected">
                                    @foreach (Product product in filteredProducts)
                                    {
                                        <option value="@product.id">@product.name</option>
                                    }
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="qty" class="form-label">Ilość</label>
                                <div class="input-group">
                                    @if(editingEntry.product.type == Product.Type.RawMaterial)
                                    {
                                        <InputNumber id="qty" class="form-control" @bind-Value="editingEntry.quantity" min="0" step="0.01" area-describedby="addon-unit"/>
                                        <span class="input-group-text" id="addon-unit">@editingEntry.product.unit.GetAbbreviation()</span>
                                    }
                                    else
                                    {
                                        <InputNumber id="qty" class="form-control" @bind-Value="editingEntry.quantity" min="0" step="1"/>
                                    }
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">Save</button>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (isLoading)
    {
         <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog">
                <div class="modal-content text-light bg-dark">
                    <div class="modal-header">
                        <h5 class="modal-title">Pobieranie danych...</h5>
                    </div>
                    <div class="modal-body">
                        <div class="progress" role="progressbar" aria-label="Success striped example" aria-valuenow="@currentRefreshingIndex" aria-valuemin="0" aria-valuemax="@shippingEntries.Count">
                            <div class="progress-bar progress-bar-striped bg-success progress-bar-animated" style="width: @currentRefreshingIndex%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


@code {
    private string productSearch = string.Empty;
    private string searchTerm = string.Empty;

    private List<ShippingEntryViewModel> shippingEntries = new List<ShippingEntryViewModel>();
    private ShippingEntryViewModel? editingEntry = null;

    private List<Product> allProducts = new List<Product>();
    private List<Product> filteredProducts = new List<Product>();

    private bool isLoading = false;
    private int currentRefreshingIndex = 1;

    private IEnumerable<ShippingEntryViewModel> filteredShippings => shippingEntries
        .Where(e => string.IsNullOrWhiteSpace(searchTerm) ||
                    e.product.name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                    e.product.package.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                    e.product.farnellID.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                    e.product.tmeID.Contains(searchTerm, StringComparison.OrdinalIgnoreCase));

    protected override async Task OnInitializedAsync()
    {
        allProducts = await ProductService.Get();
        shippingEntries = (await ShippingEntryService.GetModels()).OrderBy(se => se.product.name).ToList();


        // if there is product defined but no shipping entry, create empty shipping entry
        foreach(Product p in allProducts)
        {
            ShippingEntryViewModel? entry = shippingEntries.FirstOrDefault(se => se.product.id == p.id);

            if(p.tmeID != null && entry == null)
            {
                ShippingEntryViewModel newEmptyEntry = ShippingEntryViewModel.Empty();
                newEmptyEntry.product = p;

                entry = await ShippingEntryService.UpdateInfoOrInsertNew(newEmptyEntry);
                shippingEntries.Add(entry);
            }
        }
            

        FilterProducts();
    }
    private void AddNew() => editingEntry = ShippingEntryViewModel.Empty();
    private void CloseAddModal() => editingEntry = null;
    private async void SaveEntry(EditContext context)
    {
        if(editingEntry == null) return;

        if(editingEntry.product.id == Guid.Empty && filteredProducts.Count > 0)
            editingEntry.product = filteredProducts[0];

        ShippingEntryViewModel newEntry = await ShippingEntryService.UpdateInfoOrInsertNew(editingEntry);
        if(shippingEntries.Any(x=>x.id == newEntry.id))
        {
            var index = shippingEntries.FindIndex(x => x.id == newEntry.id);
            shippingEntries[index] = newEntry;
        } 
        else shippingEntries.Add(newEntry);
        editingEntry = null;

        shippingEntries = (await ShippingEntryService.GetModels()).OrderBy(se => se.product.name).ToList();
        
        StateHasChanged();
    }
    private async Task RefreshValues()
    {
        isLoading = true;
        currentRefreshingIndex = 0;
        StateHasChanged();

        int maxConcurrency = 5;
        using SemaphoreSlim semaphore = new SemaphoreSlim(maxConcurrency);
        object lockObj = new object();

        IEnumerable<Task<ShippingEntryViewModel>>? tasks = shippingEntries.Select(async entry =>
        {
            await semaphore.WaitAsync();
            try
            {
                ShippingEntryViewModel updated = await ShippingEntryService.RefreshValue(entry);

                lock (lockObj) currentRefreshingIndex++;

                await InvokeAsync(StateHasChanged);
                return updated;
            }
            finally { semaphore.Release(); }
        });

        ShippingEntryViewModel[]? results = await Task.WhenAll(tasks);

        for (int i = 0; i < results.Length; i++) shippingEntries[i] = results[i];

        isLoading = false;
        StateHasChanged();
    }
    private void OnProductSelected(ChangeEventArgs e)
    {
        if(editingEntry == null) return;

        Guid selectedId = Guid.Parse(e.Value?.ToString() ?? Guid.Empty.ToString());
        Product? selectedProduct = allProducts.FirstOrDefault(p => p.id == selectedId);

        if (selectedProduct != null) editingEntry.product = selectedProduct;
        StateHasChanged();
    }
    private void FilterProducts()
    {

        Product? prevSelected = filteredProducts.Count > 0? filteredProducts[0] : null;
        filteredProducts = allProducts
            .Where(p => string.IsNullOrWhiteSpace(productSearch) || p.name.Contains(productSearch, StringComparison.OrdinalIgnoreCase))
            .OrderBy(p=>p.name)
            .ToList();

        if(filteredProducts.Count > 0 && prevSelected != filteredProducts[0])
        {
            OnProductSelected(new ChangeEventArgs { Value = filteredProducts[0].id.ToString() });
        }
    }
}